---
import BaseLayout from "../../layouts/BaseLayout.astro";

const {
  title = ".NET - Blog",
  description = "",
  image = "",
  url = "",
} = Astro.props;

const posts = Object.values(import.meta.glob('./posts/*.md', { eager: true }));
---

<BaseLayout title={title} description={description} image={image} url={url}>
  <main class="blog-main">
      <header class="blog-header">
      <h1>.NET</h1>
    </header>
    <h2></h2>
    <ul>
      <li>
        <a href="https://learn.microsoft.com/es-mx/dotnet/fundamentals/">Documentación sobre los aspectos básicos de .NET</a>
      </li>
      <li>
        <a href="https://learn.microsoft.com/es-mx/dotnet/core/tools/">Información general sobre la CLI de .NET</a>
      </li>
      <li>C# in Depth (4th ed.) (J. Skeet)</li>
    </ul>
    <ul class="blog-list">
      {
        posts.map(post => (
          <li key={post.url}>
            <a href={post.url}>{post.frontmatter.title}</a>
          </li>
        ))
      }
    </ul>
    <hr>
    <a class="link-back" href="/blog/">Volver</a>
  </main>
</BaseLayout>