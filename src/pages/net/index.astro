---
import BaseLayout from "../../layouts/BaseLayout.astro";

const {
  title = ".NET - Blog",
  description = "",
  image = "",
  url = "",
} = Astro.props;

const posts = Object.values(import.meta.glob('./posts/*.md', { eager: true }));
---

<BaseLayout title={title} description={description} image={image} url={url}>
  <main class="blog-main">
    <header class="blog-header">
      <h1>.NET</h1>
    </header>
    <hr>
    <ul class="references-links">
      <li>
        <a href="https://learn.microsoft.com/es-mx/dotnet/fundamentals/" target="_blank">Documentación sobre los aspectos básicos de .NET</a>
      </li>
      <li>
        <a href="https://learn.microsoft.com/es-mx/dotnet/core/tools/" target="_blank">Información general sobre la CLI de .NET</a>
      </li>
      <li>
        <a href="https://csharpindepth.com/" target="_blank">C# in Depth (4th ed.) (J. Skeet)</a></li>
    </ul>
    <hr>
    <ul class="blog-list">
      {
        posts.map(post => (
          <li key={post.url}>
            <a href={post.url}>{post.frontmatter.title}</a>
          </li>
        ))
      }
    </ul>
    <hr>
    <a class="link-back" href="/blog/">Volver</a>
  </main>
</BaseLayout>

<style>
  h1 {
    color: #512BD4;
  }
  .references-links li a:hover {
    color: #512BD4;
  }
</style>