  <style>
    .main-container {
      max-width: 767px;
      margin-inline: auto;
    }
    .cards-container {
      display: grid;
      grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
      gap: 16px;
    }

    .card {
      display: flex;
      justify-content: space-between;
      align-items: center;
      background: var(--color-bg-secondary);
      border: 1px solid #eee;
      border-radius: 8px;
      padding: 16px;
      color: var(--color-text);
      text-decoration: none;
      transition: transform 0.2s, border-color 0.2s;
    }

    .card-csharp:hover {
      border-color: #a259c4;
      transform: translateY(-4px);
    }
    .card-expressjs:hover {
      border-color: #222;
      transform: translateY(-4px);
    }

    .card-javascript:hover {
      border-color: #f7df1e;
      transform: translateY(-4px);
    }

    .card-visualstudio:hover {
      border-color: #854CC7;
      transform: translateY(-4px);
    }

    .card-git:hover {
      border-color: #f05032;
      transform: translateY(-4px);
    }

    .card-docker:hover {
      border-color: #2496ED;
      transform: translateY(-4px);
    }

    .card-net:hover {
      border-color: #512BD4;
      transform: translateY(-4px);
    }
  </style>
